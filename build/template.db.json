{
  "variables": {
    "provisioner": "build.sh",
    "db-provisioner": "build-pg.sh",
    "output": "rails-jade-18-04-pg.box",
    "source_path": "ubuntu-18-04/small/vm"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "guest_os_type": "Ubuntu_64",
      "source_path": "{{ user `source_path` }}/rails-jade.ovf",
      "ssh_username": "ubuntu",
      "ssh_password": "ubuntu",
      "shutdown_command": "echo 'ubuntu' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "{{ user `provisioner` }}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [
        "virtualbox-ovf"
      ],
      "output": "{{ user `output` }}",
      "vagrantfile_template": "Vagrantfile"
    }
  ]
}